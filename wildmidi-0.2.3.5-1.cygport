DESCRIPTION="MIDI to WAV library and frontend"
HOMEPAGE="http://wildmidi.sourceforge.net/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.gz"
PATCH_URI="0.2.3.4-cygwin.patch
           0.2.3.5-parallel-make.patch"

PKG_NAMES="${PN} libWildMidi1 libWildMidi-devel"
wildmidi_CONTENTS='usr/bin/*.exe usr/share/'
libWildMidi1_CONTENTS='usr/bin/*-1.dll'
libWildMidi_devel_CONTENTS='usr/include/ usr/lib/'

CYGCONF_ARGS="--disable-werror --with-wildmidi-cfg=/etc/timidity.cfg"

KEEP_LA_FILES="none"
